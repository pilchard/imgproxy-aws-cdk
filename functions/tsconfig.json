{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // Emit
    "removeComments": true,
    "noEmit": true,
    "declaration": false,
    "target": "ESNext", // MUST BE ES5 for CloudFront Function support  https://docs.aws.amazon.com/AmazonCloudFront/latest/DeveloperGuide/functions-javascript-runtime-features.html#writing-functions-javascript-features-core
    "module": "CommonJS", // Beware CloudFront JS environment doesn't contain all commonjs runtime modules    
    "lib": [
      "ES5",
      "ES2021"
    ],
  },
  "include": [
    "**/*.ts",
    "../scripts/functions/url-rewrite/processing-options.ts"
  ],
}